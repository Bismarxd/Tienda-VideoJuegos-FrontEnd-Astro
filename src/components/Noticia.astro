---
export interface Props {
    titulo: string;
    contenido: string;
    imagen: string
}

const {titulo, contenido, imagen} = Astro.props





const backgroundImage = `url(${imagen})`;

---

<style define:vars={{backgroundImage}}>
    .noticia{
        background: linear-gradient(to bottom, rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 1)),var(--backgroundImage);

        
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.5), 0 0 20px rgba(0, 0, 0, 0.3), 0 0 30px rgba(0, 0, 0, 0.2), 0 0 40px rgba(0, 0, 0, 0.1);
                width:80%;
                
                transform: perspective(800px) rotateX(10deg);
                margin-top: 10rem;   
                background-size: cover;
                background-position: center center; 
                }

                @media (min-width: 768px) {
                    .noticia {
                        margin-left: 20rem;
                    }
                }

    }

</style>

<section class="noticia">
    
    <div class="contenedor noticia-grid">
        <div class="contenido">
            <h2>{titulo}</h2>
            <p class="texto">{contenido}</p>
        </div>
       
    </div>

</section>


<style>
    .noticia{
    padding: 5rem 0;
    margin-top: 10rem;   
    background-size: cover;
    background-position: center center;

}

@media (min-width:768px){
    .noticia-grid{
        display: grid;
        grid-template-columns: repeat(2,1fr);
    }

    .noticia .contenido{
        grid-column: 1 / 2;
    }
  }
.noticia h2{

    font-size: 4rem;
    text-transform: uppercase;
    color: darkcyan;
    text-align: center;
  }

  .noticia .texto{

    font-size: 1.5rem;
    text-transform: uppercase;
    color: azure;
    text-align: center;
  }

  
</style>